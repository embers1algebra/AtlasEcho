{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,

    "strict": true,
    "noEmit": true,
    "isolatedModules": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["vite/client"],
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "app/**/*.ts",
    "main.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
